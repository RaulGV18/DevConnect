{# templates/cv/plantilla.html.twig #}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Currículum Vitae</title>
    <style>
        body { font-family: Arial, sans-serif; font-size: 14px; }
        h1, h2 { color: #2c3e50; }
    </style>
</head>
<body>
    <h1>{{ nombre }}</h1>
    <p><strong>Email:</strong> {{ email }}</p>
    <p><strong>Teléfono:</strong> {{ telefono }}</p>

    <h2>Educación</h2>
    <ul>
        {% for item in educacion %}
            <li>{{ item }}</li>
        {% endfor %}
    </ul>

    <h2>Experiencia</h2>
    <ul>
        {% for item in experiencia %}
            <li>{{ item }}</li>
        {% endfor %}
    </ul>

    <h2>Habilidades</h2>
    <ul>
        {% for item in habilidades %}
            <li>{{ item }}</li>
        {% endfor %}
    </ul>
</body>
</html>
