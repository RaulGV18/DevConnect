<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Currículum de {{ data.nombre }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            color: #222;
            padding: 40px;
            font-size: 14px;
            line-height: 1.6;
            background-color: #fff;
        }

        .header {
            display: flex;
            align-items: center;
            margin-bottom: 30px;
            border-bottom: 2px solid #000;
            padding-bottom: 15px;
        }

        .profile-img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 20px;
            border: 2px solid #444;
        }

        .header-info h1 {
            margin: 0;
            font-size: 24px;
        }

        .contact-info p {
            margin: 4px 0;
        }

        .section {
            margin-bottom: 25px;
        }

        .section h2 {
            margin-bottom: 8px;
            font-size: 18px;
            border-bottom: 1px solid #ccc;
            padding-bottom: 4px;
            color: #333;
        }

        .section p {
            margin: 0;
            font-size: 14px;
        }
    </style>
</head>
<body>

    <div class="header">
        {% if fotoBase64 %}
            <img src="data:image/jpeg;base64,{{ fotoBase64 }}" alt="Foto de perfil" class="profile-img" />
        {% endif %}
        <div class="header-info">
            <h1>{{ data.nombre }}</h1>
            <div class="contact-info">
                <p><strong>Email:</strong> {{ data.email }}</p>
                <p><strong>Teléfono:</strong> {{ data.telefono }}</p>
            </div>
        </div>
    </div>

    {% if data.perfil %}
        <div class="section">
            <h2>Perfil Profesional</h2>
            <p>{{ data.perfil }}</p>
        </div>
    {% endif %}

    {% if data.experiencia %}
        <div class="section">
            <h2>Experiencia Laboral</h2>
            <p>{{ data.experiencia }}</p>
        </div>
    {% endif %}

    {% if data.educacion %}
        <div class="section">
            <h2>Educación</h2>
            <p>{{ data.educacion }}</p>
        </div>
    {% endif %}

    {% if data.habilidades %}
        <div class="section">
            <h2>Habilidades</h2>
            <p>{{ data.habilidades }}</p>
        </div>
    {% endif %}

</body>
</html>
