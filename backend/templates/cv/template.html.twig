<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Currículum de {{ data.nombre }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            color: #222;
            line-height: 1.6;
            padding: 30px;
            font-size: 14px;
        }

        h1 {
            border-bottom: 2px solid #000;
            padding-bottom: 5px;
        }

        h2 {
            color: #333;
            margin-top: 25px;
            border-bottom: 1px solid #ccc;
            padding-bottom: 5px;
        }

        .section {
            margin-bottom: 20px;
        }

        .info {
            margin-top: -10px;
        }
    </style>
</head>
<body>
    <h1>{{ data.nombre }}</h1>
    <div class="info">
        <p><strong>Email:</strong> {{ data.email }}</p>
        <p><strong>Teléfono:</strong> {{ data.telefono }}</p>
    </div>

    {% if data.perfil %}
        <div class="section">
            <h2>Perfil Profesional</h2>
            <p>{{ data.perfil }}</p>
        </div>
    {% endif %}

    {% if data.experiencia %}
        <div class="section">
            <h2>Experiencia Laboral</h2>
            <p>{{ data.experiencia }}</p>
        </div>
    {% endif %}

    {% if data.educacion %}
        <div class="section">
            <h2>Educación</h2>
            <p>{{ data.educacion }}</p>
        </div>
    {% endif %}

    {% if data.habilidades %}
        <div class="section">
            <h2>Habilidades</h2>
            <p>{{ data.habilidades }}</p>
        </div>
    {% endif %}
</body>
</html>
